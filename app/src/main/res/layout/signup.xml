<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75CC5B"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#DADBDD"
            android:gravity="center_horizontal"
            android:text="SIGN UP"
            android:textColor="#D813064E"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/coming_soon"
            android:text="MOVIE MANIAC"
            android:textColor="#081F4C"
            android:textSize="40dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="225dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="#020101"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/email"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:hint="Enter the email"
            android:textStyle="italic"
            android:textSize="25dp"
            android:inputType="textEmailAddress"
            android:background="#AEA9A9"
            android:layout_marginTop="60dp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/password1"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Enter the password"
            android:textStyle="italic"
            android:textSize="25dp"
            android:background="#AEA9A9"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/password2"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:hint="Re-enter the password"
            android:textStyle="italic"
            android:textSize="25dp"
            android:background="#AEA9A9"
            android:layout_marginTop="40dp"
            android:inputType="textPassword"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#292E53"
            android:text="Sign Up"
            android:textSize="25dp"
            android:textColor="#D8D4D4"
            android:textAllCaps="false"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



